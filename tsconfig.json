{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "lib": ["dom", "es2019"],
    "skipLibCheck": true,
    "baseUrl": "src",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "./src",
    "./types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*/**/__tests__",
    "*/**/stories"
  ]
}
